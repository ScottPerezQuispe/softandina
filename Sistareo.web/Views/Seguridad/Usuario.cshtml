
@{
    ViewBag.Title = "Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="button" id="btnGrabar" style="display:none;" />

<input type="hidden" id="hhdIdUsuario" value="@ViewData["IdUsuario"]">
@Html.Hidden("Url_ListarUsuario", Url.Action("ListarUsuario", "Seguridad"))
@Html.Hidden("Url_EliminarUsuario", Url.Action("EliminarUsuario", "Seguridad"))


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-9">
        <h2 class="gen-h2-titulo">Gestión de Usuarios</h2>
        <ol class="breadcrumb">
            <li>
                <a>Seguridad</a>
            </li>
            <li class="active">
                <strong>Gestión de Usuarios</strong>
            </li>
        </ol>
    </div>

</div>


<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox">
                <div class="ibox-content">

                    <div class="row">
                        <div class="col-lg-12 text-center">

                            <div class="row" style="padding-right: 10px; padding-left: 10px;">
                                <div class="col-md-3" style="padding:0px;">
                                    <div class="input-group-btn">
                                        <select class="form-control" name="account" id="cboFiltroUsuario" onchange="fn_FiltroLista();">
                                            <option value="0" selected>Todos</option>
                                            <option value="1">Nombres Y/O apellidos</option>
                                            <option value="2">Usuario</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-5" style="padding:0px;">
                                    <div class="input-group-btn">
                                        <input type="text" placeholder="Ingrese filtro " class="input form-control" id="txtValorFiltro" maxlength="20">
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="input-group-btn">
                                        <button style="width:100%" type="button" class="btn btn btn-primary" onclick="fn_ListarUsuarios();"> <i class="glyphicon glyphicon-search"></i> Buscar </button>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="input-group-btn">
                                        <button id="btnNuevo" name="SegSeguridadusuarioRegistrar" style="display:block;" type="button" class="btn btn btn-primary"> <i class="glyphicon glyphicon-user"></i> &nbsp; Nuevo Usuario </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="input-group">
                        <span id="spTotalElementos" class="pull-left small text-muted" style="padding:5px 4px;"></span>
                    </div>

                    <!-- ********************************** -->
                    <!-- LISTADO -->
                    <!-- ********************************** -->
                    <div class="table-responsive clients-list">
                        <table id="tblUsuario" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    
                                    <th>Nombres y Apellidos</th>
                                    <th>Usuario</th>
                                    <th>DNI</th>
                                  
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="tbContenedorUUsuario"></tbody>
                        </table>

                       
                    </div>
                    <!-- FIN LISTADO -->

                </div>
            </div>
        </div>





    </div>
</div>

<!-- ************************************** -->
<!-- * MODAL * -->
<!-- ************************************** -->
<div id="mdlNuevo" class="modal css_modal" data-backdrop="static" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div id="mdlNuevoDialog" class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <i id="iIconoModal" class="fa" style="color: #f7a54a;"></i>
                <div class="modal-cabecera">
                    <div class="modal-title"> <span id="mdlTitulo"></span> </div>
                    <div class="modal-subTitle"> <span id="mdlSubTitulo"></span> </div>
                </div>
                <div class="modal-buttonTop">
                    <button type="button" id="btnGrabarModal" data-loading-text="Grabando..." class="btn btn-primary" autocomplete="off">Grabar</button>
                    <button type="button" id="btnCancelarModal" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
            <div class="modal-body" style="padding: 15px 15px 15px 15px; ">
                <iframe id="ifrModal" width="100%" frameborder="0" scrolling="auto" marginheight="0" marginwidth="0" src=""></iframe>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script src="@Url.Content("~/Scripts/View/UsuarioIndex.js")"></script>