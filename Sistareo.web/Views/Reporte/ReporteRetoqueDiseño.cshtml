
@{
    ViewBag.Title = "ReporteRetoqueDiseño";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string FechaActual = ViewBag.FechaActual;
}

<script src="~/Scripts/datetimepicker/moment.js"></script>
<link href="~/Content/datetimepicker/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/datetimepicker/bootstrap-datetimepicker.min.js"></script>
<script src="~/Scripts/datetimepicker/es.js"></script>
@Html.Hidden("Url_ListarTodoCampania", Url.Action("ListarTodoCampania", "Proceso"))
@Html.Hidden("Url_ListarTodoOperador", Url.Action("ListarTodoOperador", "Proceso"))
@Html.Hidden("Url_ListarTodoProducto", Url.Action("ListarTodoProducto", "Proceso"))
@Html.Hidden("Url_ConsultarRetoque", Url.Action("ConsultarRetoque", "Reporte"))
@Html.Hidden("FechaActual", FechaActual)

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2 class="gen-h2-titulo">Diseño y Retoque</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">Inicio</a>
            </li>
            <li>
                <a>Reporte</a>
            </li>
            <li class="active">
                <strong>Diseño y Retoque</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>



<div class="wrapper wrapper-content">
    <div class="row animated fadeInDown">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content" style="padding: 10px;">

                    <div class="row">
                        <div class="form-group">
                            @*<div class="col-lg-1">
                                <input type="radio" name="optradio">
                            </div>*@
                            <label   class="col-lg-1 control-label"><input type="radio" value="0" name="optradio">Campaña</label>
                            <div class="col-lg-3">
                                <select id="cboCampania" class="form-control">
                                    <option value="0">Selecciona Campaña</option>
                                </select>
                            </div>
                            <label class="col-lg-1 control-label"><input type="radio" value="1" name="optradio">Operario</label>
                            <div class="col-lg-3">
                                <select id="cboOperario" class="form-control">
                                    @*<option value="0">Selecciona Operador</option>*@
                                </select>
                            </div>
                            <label class="col-lg-1 control-label"><input type="radio" value="2" name="optradio">Producto</label>
                            <div class="col-lg-3">
                                <select id="cboProducto" class="form-control">
                                    <option value="0">Selecciona Producto</option>
                                </select>
                            </div>

                        </div>

                    </div>
                    <br />
               

                    <div class="row">
                        <div class="form-group">
                            <label class="col-lg-1 control-label">Fecha Inicio</label>
                            <div class="col-lg-2 input-group date" id="FechaIni">
                                <input id="txtFechaInicio" type="text" class="form-control">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            <div class="col-lg-1">

                            </div>
                            <label class="col-lg-1 control-label">Fecha Fin</label>
                            <div class="col-lg-2 input-group date" id="FechaFin">
                                <input id="txtFechaFin" type="text" class="form-control">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            <div class="col-lg-2">
                                <label><input type="radio" name="optradio" value="3" checked>Detallado</label>
                            </div>
                            <div class="col-lg-2">
                                <button id="btnConsultar" type="button" class="btn btn-primary btn-block">Consultar</button>
                            </div>

                        </div>

                    </div>

                

                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content" style="padding: 10px;">
                    <div class="row">
                        <iframe   id="ifrReport" style="width: 100%; height: 500px;" frameborder="0" hspace="0" vspace="0" marginheight="0" marginwidth="0"></iframe>
                        @*<iframe src="@Url.Content("~/Reports/RptRetoqueDiseño.aspx")" id="ifrReport" style="width: 100%; height: 500px;" frameborder="0" hspace="0" vspace="0" marginheight="0" marginwidth="0"></iframe>*@
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/Scripts/View/ReporteDiseñoRetoque.js"></script>