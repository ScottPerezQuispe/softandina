                           </div>
                            <div  class="col-lg-2">
                                <button id="btnNuevo"  type="button" class="btn btn-primary btn-block">Nuevo</button>
                            </div>
                            
                        </div>
                       
                    </div>

                    <br />
                  
                    <div class="tab-content">
                        <div class="full-height-scroll" style="max-height:500px;">
                            <div class="table-responsive css-document-list">
                                <table id="tblExplorador" class="table table-hover">
                                    <colgroup>
                                        <col style="width:180px;" />
                                        <col style="width:250px;" />
                                        <col style="width:180px;" />
                                        <col style="width:250px;" />
                                        <col style="width:250px;" />
                                        <col style="text-align: center; " />
                                     
                                    </colgroup>
                                    <thead>
                                        <tr style="background-color: #FAFAFA; border-bottom: 1px solid #FFF;">
                                            <td> Campaña </td>
                                            <td> Operario </td>
                                            <td> Fecha Apertura </td>
                                            <td> Jefatura </td>
                                            <td> Coordinador</td>
                                            
                                            <td style="text-align: center; "> Opciones </td>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

       
    </div>
</div>

