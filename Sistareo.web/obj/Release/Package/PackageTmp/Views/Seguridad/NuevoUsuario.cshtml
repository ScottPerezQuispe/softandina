
@{
    ViewBag.Title = "NuevoUsuario";
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}
<input type="button" id="btnGrabar" style="display:none;" />
<input type="button" id="btnActualizar" style="display:none;" />
<input type="hidden" id="hhdIdUsuario" value="@ViewData["IdUsuario"]">
@Html.Hidden("Url_ListarTodoRol", Url.Action("ListarTodoRol", "Seguridad"))
@Html.Hidden("Url_ObtenerUsuario", Url.Action("ObtenerUsuario", "Seguridad"))
@Html.Hidden("Url_RegistrarUsuario", Url.Action("RegistrarUsuario", "Seguridad"))

<div id="dvContenedorModal">

    <fieldset class="css_fielset">
        <legend>Datos de Usuario</legend>

        <div class="row">
            <div class="container-fluid">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" style="padding-right:0px;">Nombres</label>
                        <div class="col-sm-3">
                            <input id="txtNombres" type="text" class="form-control">
                        </div>
                        <label class="col-sm-2 control-label" style="padding-right:0px;">DNI</label>
                        <div class="col-sm-3">
                            <input id="txtDNI" type="text" class="form-control">
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" style="padding-right:0px;">APellido Paterno</label>
                        <div class="col-sm-3">
                            <input id="txtApePaterno" type="text" class="form-control">
                        </div>
                        <label class="col-sm-2 control-label" style="padding-right:0px;">Usuario</label>
                        <div class="col-sm-3">
                            <input id="txtUsuario" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" style="padding-right:0px;">APellido Materno</label>
                        <div class="col-sm-3">
                            <input id="txtApeMaterno" type="text" class="form-control">
                        </div>
                        <label class="col-sm-2 control-label" style="padding-right:0px;">Contraseña</label>
                        <div class="col-sm-3">
                            <input id="txtClave" type="password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" style="padding-right:0px;">Rol</label>
                        <div class="col-sm-3">
                            <select id="cboRoles" class="form-control">
                                <option value="0">Seleccione</option>
                            </select>
                        </div>
                      
                    </div>

                 
                </div>
            </div>
        </div>

    </fieldset>


</div>

<script src="@Url.Content("~/Scripts/View/Usuario.js")"></script>